<% content_for :page_title do %>
  <%= Spree.t(:editing_suburb) %>
<% end %>

<div data-hook="admin_suburb_edit_form_header">
  <%= render 'spree/shared/error_messages', target: @suburb %>
</div>

<div data-hook="admin_suburb_edit_form">
  <%= form_for [:admin, @state,@suburb] do |f| %>
    <div class="row">
      <div class="col-md-12">
        <%= render 'form', f: f %>
        <%= render 'spree/admin/shared/edit_resource_links' %>
      </div>
    </div>
  <% end %>
</div>
<% content_for :page_title do %>
  <%= link_to Spree.t(:states), spree.admin_state_suburbs_url(@state) %> /
  <%= @state.name %>
<% end %>
